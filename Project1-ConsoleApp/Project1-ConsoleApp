using System;

class Program
{
    static void Main()
    {
        Console.Write("–í—ä–≤–µ–¥–µ—Ç–µ –ø—ä—Ä–≤–æ —á–∏—Å–ª–æ: ");
        double a = Convert.ToDouble(Console.ReadLine());

        Console.Write("–í—ä–≤–µ–¥–µ—Ç–µ –æ–ø–µ—Ä–∞—Ç–æ—Ä (+, -, *, /): ");
        string op = Console.ReadLine();

        Console.Write("–í—ä–≤–µ–¥–µ—Ç–µ –≤—Ç–æ—Ä–æ —á–∏—Å–ª–æ: ");
        double b = Convert.ToDouble(Console.ReadLine());

        double result = op switch
        {
            "+" => a + b,
            "-" => a - b,
            "*" => a * b,
            "/" => b != 0 ? a / b : throw new DivideByZeroException(),
            _ => throw new InvalidOperationException("–ù–µ–≤–∞–ª–∏–¥–µ–Ω –æ–ø–µ—Ä–∞—Ç–æ—Ä")
        };

        Console.WriteLine($"–†–µ–∑—É–ª—Ç–∞—Ç: {result}");
    }
}
